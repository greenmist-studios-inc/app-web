<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.greenmist.persistence.mapper.ResetPasswordTokenMapper">
    <resultMap type="ResetPasswordToken" id="ResetPasswordTokenResultMap">
        <result column="token" property="token"/>
        <result column="user_id" property="userId" javaType="int"/>
    </resultMap>

    <insert id="insertResetPasswordToken" parameterType="ResetPasswordToken">
        INSERT INTO app.reset_password_token (token, user_id)
        VALUES (#{token}, #{userId})
    </insert>

    <select id="isValidResetPasswordToken" parameterType="ResetPasswordToken" resultType="boolean" flushCache="true">
        SELECT EXISTS(SELECT 1 FROM app.reset_password_token
               WHERE user_id=#{userId} AND token = #{token}
               AND created <![CDATA[>]]> Date_Sub(Now(),INTERVAL 2 HOUR))
    </select>

    <select id="getResetPasswordToken" resultMap="ResetPasswordTokenResultMap" parameterType="ResetPasswordToken" resultType="ResetPasswordToken" flushCache="true">
        SELECT user_id, token FROM app.reset_password_token
        WHERE user_id=#{userId}
        AND token=#{token}
        AND created <![CDATA[>]]> Date_Sub(Now(),INTERVAL 2 HOUR)
        LIMIT 1
    </select>

    <delete id="deleteResetPasswordTokenByUserId" parameterType="int">
        DELETE FROM app.reset_password_token
        WHERE user_id=#{id}
    </delete>

    <delete id="deleteExpiredResetPasswordTokens" parameterType="ResetPasswordToken">
        DELETE FROM app.reset_password_token
        WHERE created <![CDATA[<]]> Date_Sub(Now(),INTERVAL 2 HOUR)
    </delete>

</mapper>