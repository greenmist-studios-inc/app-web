<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.greenmist.persistence.mapper.AuthTokenMapper">
    <resultMap type="AuthToken" id="AuthTokenResultMap">
        <result column="token" property="token"/>
        <result column="user_id" property="userId" javaType="int"/>
    </resultMap>

    <insert id="insertAuthToken" parameterType="AuthToken">
        INSERT INTO app.auth_token (token, user_id)
        VALUES (#{token}, #{userId})
    </insert>

    <update id="updateAuthToken" parameterType="AuthToken" flushCache="true">
        UPDATE app.auth_token
        SET last_used = CURRENT_TIMESTAMP
        WHERE user_id=#{userId} AND token = #{token}
    </update>

    <select id="getAuthToken" resultMap="AuthTokenResultMap" parameterType="AuthToken" resultType="AuthToken"  flushCache="true">
        SELECT user_id, token FROM app.auth_token
        WHERE user_id=#{userId}
        AND token=#{token}
        AND last_used <![CDATA[>]]> Date_Sub(Now(),INTERVAL 2 HOUR)
        LIMIT 1
    </select>

    <delete id="deleteAuthToken" parameterType="AuthToken">
        DELETE FROM app.auth_token
        WHERE user_id=#{userId} AND token=#{token}
    </delete>

    <delete id="deleteExpiredAuthTokens" parameterType="AuthToken">
        DELETE FROM app.auth_token
        WHERE last_used <![CDATA[<]]> Date_Sub(Now(),INTERVAL 2 HOUR)
    </delete>

</mapper>